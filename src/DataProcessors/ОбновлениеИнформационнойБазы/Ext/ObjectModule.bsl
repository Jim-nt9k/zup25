		Объект = Выборка.Ссылка.ПолучитьОбъект();
		Объект.Код = Формат(ТекущийКод, "ЧЦ=" + ДлинаКодаСправочникаГруппыПользователей + "; ЧВН=; ЧГ=");
		Попытка
			Объект.Записать();		
