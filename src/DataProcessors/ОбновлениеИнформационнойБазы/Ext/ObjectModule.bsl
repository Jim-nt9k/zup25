		Возврат;
	КонецЕсли;
	
	Попытка
		ТекущийКод = Число(Выборка.МаксимумКод) + 1;
	Исключение
		ТекущийКод = 1;
	КонецПопытки;
	
	Запрос.Текст = "ВЫБРАТЬ Ссылка ИЗ Справочник.ГруппыПользователей";
	Выборка = Запрос.Выполнить().Выбрать();
