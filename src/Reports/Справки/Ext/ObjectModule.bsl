	Процедура СформироватьОтчет(ДокументРезультат, ЕстьОшибки = Ложь) Экспорт
		ДокументРезультат.Очистить();
		
		//Параметры документа
		ДокументРезультат.ОриентацияСтраницы = ОриентацияСтраницы.Ландшафт;
		ДокументРезультат.ПолеСлева			 = 0;
		ДокументРезультат.ПолеСправа		 = 0;
		ДокументРезультат.Защита             = Ложь;
		ДокументРезультат.ТолькоПросмотр     = Истина;
		ДокументРезультат.АвтоМасштаб		 = Истина;
		
		Если  ФормаСправки = Перечисления.ФормыТиповыхСправок.СправкаОПериодеРаботы Тогда
			СформироватьСправкаОПериодеРаботы(ДокументРезультат);
		ИначеЕсли ФормаСправки = Перечисления.ФормыТиповыхСправок.СправкаОМестеРаботы Тогда
			СформироватьСправкаОМестеРаботы(ДокументРезультат);	
		ИначеЕсли ФормаСправки = Перечисления.ФормыТиповыхСправок.СправкаОНахожденииВОтпускеПоУходу Тогда
			СформироватьСправкаОНахожденииВОтпускеПоУходу(ДокументРезультат);	
		ИначеЕсли ФормаСправки = Перечисления.ФормыТиповыхСправок.СправкаОРазмереЗаработнойПлаты Тогда
			СформироватьСправкаОРазмереЗаработнойПлаты(ДокументРезультат);
		ИначеЕсли ФормаСправки = Перечисления.ФормыТиповыхСправок.СправкаОРазмереПособияИПериодеВыплаты Тогда
			СформироватьСправкаОРазмереПособияИПериодеВыплаты(ДокументРезультат);
			//Аверсон 22.06.2021 СВФР-007692
		ИначеЕсли ФормаСправки = Перечисления.ФормыТиповыхСправок.СправкаОПериодеПособияПоБеремнностиИРодам Тогда
			СформироватьСправкаОПериодеПособияПоБеремнностиИРодам(ДокументРезультат);
			//Аверсон 26.07.2021 СВФР-007768
		ИначеЕсли ФормаСправки = Перечисления.ФормыТиповыхСправок.СправкаОВыходеДоИстеченияСрокаПоУходуИПрекращенияВыплатыПособия Тогда
			СформироватьСправкаОВыходеДоИстеченияСрокаПоУходуИПрекращенияВыплатыПособия(ДокументРезультат);
			
			//Аверсон ЕАЕ 26.08.2021 СВФР-007765
		ИначеЕсли ФормаСправки = Перечисления.ФормыТиповыхСправок.СправкаОбАлиментах Тогда
			СформироватьСправкаОбАлиментах(ДокументРезультат);
			//Аверсон СВФР-007765
		КонецЕсли;
		
	КонецПроцедуры
	
	Процедура СформироватьСправкаОРазмереПособияИПериодеВыплаты(ДокументРезультат)
		
		Запрос = Новый Запрос;
		Запрос.УстановитьПараметр("Сотрудник", Сотрудник.Физлицо);
		Запрос.УстановитьПараметр("Период", Период);
		Запрос.Текст = 
		"ВЫБРАТЬ
		|	ЕСТЬNULL(АдресПроживания.Представление, АдресПрописки.Представление) КАК Адрес,
		|	ФИОФизЛицСрезПоследних.Фамилия + "" "" + ФИОФизЛицСрезПоследних.Имя + "" "" + ФИОФизЛицСрезПоследних.Отчество КАК ФИО
		|ИЗ
		|	РегистрСведений.ФИОФизЛиц.СрезПоследних(&Период, ФизЛицо = &Сотрудник) КАК ФИОФизЛицСрезПоследних
		|		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.КонтактнаяИнформация КАК АдресПрописки
		|		ПО ФИОФизЛицСрезПоследних.ФизЛицо = АдресПрописки.Объект
		|			И (АдресПрописки.Вид = ЗНАЧЕНИЕ(Справочник.ВидыКонтактнойИнформации.ЮрАдресФизЛица))
		|		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.КонтактнаяИнформация КАК АдресПроживания
		|		ПО ФИОФизЛицСрезПоследних.ФизЛицо = АдресПроживания.Объект
		|			И (АдресПроживания.Вид = ЗНАЧЕНИЕ(Справочник.ВидыКонтактнойИнформации.ФактАдресФизЛица))";
		
		
		ВыборкаАдрес = Запрос.Выполнить().Выбрать();	
		
		Запрос = Новый Запрос;
		
		Запрос.УстановитьПараметр("Сотрудник", Сотрудник.Физлицо);
		Запрос.УстановитьПараметр("ПериодНачало", ПериодНачало);
		Запрос.УстановитьПараметр("ПериодКонец", ПериодКонец);
		
		
		СписокПособий = Новый Массив();
		
		СписокПособий.Добавить(ПланыВидовРасчета.ДополнительныеНачисленияОрганизаций.ПриРожденииРебенка);
		СписокПособий.Добавить(ПланыВидовРасчета.ДополнительныеНачисленияОрганизаций.ПриРожденииВторогоИПоследующихДетей);
		СписокПособий.Добавить(ПланыВидовРасчета.ДополнительныеНачисленияОрганизаций.ПриУсыновленииРебенка);
		СписокПособий.Добавить(ПланыВидовРасчета.ДополнительныеНачисленияОрганизаций.ПриПостановкеНаУчетВРанниеСрокиБеременности);
		
		Запрос.УстановитьПараметр("СписокПособий",СписокПособий);
		
		Запрос.Текст =
		"ВЫБРАТЬ
		|	СУММА(ПособияИзФСЗН.Результат) КАК Сумма,
		|	ВЫБОР
		|		КОГДА ПособияИзФСЗН.ПериодДействияКонец < НАЧАЛОПЕРИОДА(ПособияИзФСЗН.ПериодРегистрации, МЕСЯЦ)
		|			ТОГДА НАЧАЛОПЕРИОДА(ДОБАВИТЬКДАТЕ(ПособияИзФСЗН.ПериодРегистрации, МЕСЯЦ, -1), МЕСЯЦ)
		|		ИНАЧЕ НАЧАЛОПЕРИОДА(ПособияИзФСЗН.ПериодРегистрации, МЕСЯЦ)
		|	КОНЕЦ КАК Месяц,
		|	ПособияИзФСЗН.ВидРасчета КАК ВидРасчета
		|ИЗ                                         
		|	РегистрРасчета.ОсновныеНачисленияРаботниковОрганизаций КАК ПособияИзФСЗН
		|ГДЕ
		|	ПособияИзФСЗН.ФизЛицо = &Сотрудник
		|	И ПособияИзФСЗН.ВидРасчета.Наименование ПОДОБНО ""%Пособие%""
		|	И НЕ ПособияИзФСЗН.ВидРасчета.ПометкаУдаления
		|	И ВЫБОР
		|			КОГДА ПособияИзФСЗН.ПериодДействияКонец < НАЧАЛОПЕРИОДА(ПособияИзФСЗН.ПериодРегистрации, МЕСЯЦ)
		|				ТОГДА НАЧАЛОПЕРИОДА(ДОБАВИТЬКДАТЕ(ПособияИзФСЗН.ПериодРегистрации, МЕСЯЦ, -1), МЕСЯЦ)
		|			ИНАЧЕ НАЧАЛОПЕРИОДА(ПособияИзФСЗН.ПериодРегистрации, МЕСЯЦ)
		|		КОНЕЦ МЕЖДУ &ПериодНачало И &ПериодКонец
		|	И ПособияИзФСЗН.Результат <> 0
		|
		|СГРУППИРОВАТЬ ПО
		|	ВЫБОР
		|		КОГДА ПособияИзФСЗН.ПериодДействияКонец < НАЧАЛОПЕРИОДА(ПособияИзФСЗН.ПериодРегистрации, МЕСЯЦ)
		|			ТОГДА НАЧАЛОПЕРИОДА(ДОБАВИТЬКДАТЕ(ПособияИзФСЗН.ПериодРегистрации, МЕСЯЦ, -1), МЕСЯЦ)
		|		ИНАЧЕ НАЧАЛОПЕРИОДА(ПособияИзФСЗН.ПериодРегистрации, МЕСЯЦ)
		|	КОНЕЦ,
		|	ПособияИзФСЗН.ВидРасчета
		|
		|УПОРЯДОЧИТЬ ПО
		|	ВидРасчета,
		|	Месяц
		|;
		|
		|////////////////////////////////////////////////////////////////////////////////
		|ВЫБРАТЬ
		|	НДФЛСведенияОДоходах.Результат КАК СуммаДохода,
		|	НДФЛСведенияОДоходах.ВидРасчета КАК ВидПособияДополнительныеНачисления
		|ИЗ
		|	РегистрРасчета.ДополнительныеНачисленияРаботниковОрганизаций КАК НДФЛСведенияОДоходах
		|ГДЕ
		|	НДФЛСведенияОДоходах.Результат <> 0
		|	И ВЫБОР
		|			КОГДА НДФЛСведенияОДоходах.БазовыйПериодНачало <> ДАТАВРЕМЯ(1, 1, 1)
		|					И НДФЛСведенияОДоходах.БазовыйПериодКонец <> ДАТАВРЕМЯ(1, 1, 1)
		|				ТОГДА НДФЛСведенияОДоходах.БазовыйПериодНачало >= &ПериодНачало
		|						И НДФЛСведенияОДоходах.БазовыйПериодКонец <= &ПериодКонец
		|			ИНАЧЕ НДФЛСведенияОДоходах.ПериодРегистрации МЕЖДУ &ПериодНачало И &ПериодКонец
		|		КОНЕЦ
		|	И НДФЛСведенияОДоходах.ВидРасчета В(&СписокПособий)
		|	И НДФЛСведенияОДоходах.ФизЛицо = &Сотрудник";
		
		Результат = Запрос.ВыполнитьПакет();
		
		Макет = ПолучитьМакет("СправкаОРазмереПособияИПериодеВыплаты");
		ДокументРезультат.ИмяПараметровПечати = "ПАРАМЕТРЫ_ПЕЧАТИ_СправкаОРазмереПособияИПериодеВыплаты";//О.Т. Аверсон 01.06.2017 № 680
		
		ОбластьШапка = Макет.ПолучитьОбласть("Шапка");
		ОбластьАдресат = Макет.ПолучитьОбласть("Адресат");
		ОбластьАдресат2 = Макет.ПолучитьОбласть("Адресат2"); //Аверсон 01.02.2023 КВВ СВФР-010241
		ОбластьПодвал = Макет.ПолучитьОбласть("Подвал");
		
		СчетчикПособий = 0; //Аверсон 11.10.2019 КВВ СВФР-004911 
		ИтогоГод1 =0;
		ИтогоГод2 =0;	
		Выборка = Результат[0].Выбрать();
		ВидРасчетаПрошл = "";
		СуммаИтог = 0;
		Пока Выборка.Следующий() Цикл
			Если не ВидРасчетаПрошл = Выборка.ВидРасчета Тогда 
				Если ВидРасчетаПрошл <> "" Тогда
					
					ОбластьАдресат.Параметры.итог1 = ИтогоГод1;
					ОбластьАдресат.Параметры.итог2 = ИтогоГод2;
					ОбластьАдресат.Параметры.Год1 = Формат(ПериодНачало,"ДФ=гггг");
					ОбластьАдресат.Параметры.Год2 = Формат(ПериодКонец,"ДФ=гггг");
					ОбластьАдресат.Параметры.СуммаИтог = ИтогоГод1+ИтогоГод2;
					
					Если ОбластьАдресат.Параметры.Год1 = ОбластьАдресат.Параметры.Год2 Тогда
						ОбластьАдресат.Параметры.Год2 ="";	
					КонецЕсли;
					
					//Аверсон 11.10.2019 КВВ СВФР-004911 (
					СчетчикПособий = СчетчикПособий + 1;
					Если СчетчикПособий > 1 Тогда
						ДокументРезультат.ВывестиГоризонтальныйРазделительСтраниц();
					КонецЕсли;
					//Аверсон 11.10.2019 КВВ СВФР-004911 )
					
					ДокументРезультат.Вывести(ОбластьШапка);
					ДокументРезультат.Вывести(ОбластьАдресат);
					
					//Аверсон 01.02.2023 КВВ СВФР-010241 (
					ДокументРезультат.Вывести(ОбластьАдресат2);
					ДокументРезультат.ВывестиГоризонтальныйРазделительСтраниц();
					//Аверсон 01.02.2023 КВВ СВФР-010241 )
					
					ДокументРезультат.Вывести(ОбластьПодвал);
					
					ОбластьАдресат.Параметры.Доход1 = "";
					ОбластьАдресат.Параметры.Доход2 = "";  				
					ОбластьАдресат.Параметры.Доход3 = "";
					ОбластьАдресат.Параметры.Доход4 = "";
					ОбластьАдресат.Параметры.Доход5 = "";
					ОбластьАдресат.Параметры.Доход6 = "";
					ОбластьАдресат.Параметры.Доход7 = "";
					ОбластьАдресат.Параметры.Доход8 = "";
					ОбластьАдресат.Параметры.Доход9 = "";
					ОбластьАдресат.Параметры.Доход10 = "";
					ОбластьАдресат.Параметры.Доход11 = "";
					ОбластьАдресат.Параметры.Доход12 = "";
					ОбластьАдресат.Параметры.Доход13 = "";
					ОбластьАдресат.Параметры.Доход14 = "";
					ОбластьАдресат.Параметры.Доход15 = "";
					ОбластьАдресат.Параметры.Доход16 = "";
					ОбластьАдресат.Параметры.Доход17 = "";
					ОбластьАдресат.Параметры.Доход18 = "";
					ОбластьАдресат.Параметры.Доход19 = "";
					ОбластьАдресат.Параметры.Доход20 = "";
					ОбластьАдресат.Параметры.Доход21 = "";
					ОбластьАдресат.Параметры.Доход22 = "";
					ОбластьАдресат.Параметры.Доход23 = "";
					ОбластьАдресат.Параметры.Доход24 = "";
					
				КонецЕсли;
				ИтогоГод1 =0;
				ИтогоГод2 =0;
				
				ОбластьАдресат.Параметры.МестоВыдачи = МестоВыдачи;
				ОбластьАдресат.Параметры.Дата = Формат(Период,"ДФ=dd.MM.yyyy");
				ОбластьАдресат.Параметры.Номер = Номер;
				ОбластьАдресат.Параметры.ПериодНачало = Формат(ПериодНачало,"ДФ='dd ММММ yyyy'") +" г.";
				ОбластьАдресат.Параметры.ПериодКонец = Формат(ПериодКонец,"ДФ='dd ММММ yyyy'") +" г.[2]";
				
				Если ВыборкаАдрес.Следующий() Тогда
					ОбластьАдресат.Параметры.Адресат = ВыборкаАдрес.ФИО;
					ОбластьАдресат.Параметры.Адрес = ВыборкаАдрес.Адрес; 	
				КонецЕсли;
				//Аверсон 11.10.2019 КВВ СВФР-004911 (
				ОбластьПодвал.Параметры.НаименованиеПособия = Выборка.ВидРасчета.Наименование; 
				ДП = ""; МП = ""; ГП = "";
				ЗапросОкончПособия = Новый Запрос;
				ЗапросОкончПособия.Текст = 
				"ВЫБРАТЬ
				|	ПлановыеНачисленияРаботниковОрганизацийСрезПоследних.ВидРасчета,
				|	ПлановыеНачисленияРаботниковОрганизацийСрезПоследних.ПериодЗавершения
				|ИЗ
				|	РегистрСведений.ПлановыеНачисленияРаботниковОрганизаций.СрезПоследних(&Период, ) КАК ПлановыеНачисленияРаботниковОрганизацийСрезПоследних
				|ГДЕ
				|	ПлановыеНачисленияРаботниковОрганизацийСрезПоследних.Сотрудник = &Сотрудник
				|	И ПлановыеНачисленияРаботниковОрганизацийСрезПоследних.ВидРасчета = &ВидРасчета
				|	И ПлановыеНачисленияРаботниковОрганизацийСрезПоследних.ДействиеЗавершения = ЗНАЧЕНИЕ(Перечисление.ВидыДействияСНачислением.Прекратить)";
				ЗапросОкончПособия.УстановитьПараметр("Сотрудник", Сотрудник);
				ЗапросОкончПособия.УстановитьПараметр("Период", периодконец);
				ЗапросОкончПособия.УстановитьПараметр("ВидРасчета",	Выборка.ВидРасчета);
				РезОкончПособия = ЗапросОкончПособия.Выполнить().Выбрать();
				Если РезОкончПособия.Следующий() Тогда
					ДатаОкончПособия = РезОкончПособия.ПериодЗавершения-1;
					Если ЗначениеЗаполнено(ДатаОкончПособия) Тогда
						Если (НачалоДня(ДатаОкончПособия)>=НачалоДня(ПериодНачало)) И (НачалоДня(ДатаОкончПособия)<=НачалоДня(ПериодКонец)) Тогда
							ДП = Лев(ДатаОкончПособия,2);//Формат(ДатаОкончПособия, "ДФ=ММ");
							МП = нрег(Формат(ДатаОкончПособия, "ДФ=ММММ"));
							МП = ?(Прав(МП,1)="т",МП+"а",СтрЗаменить(МП,"ь","я"));
							ГП = Формат(ДатаОкончПособия, "ДФ=гггг");
						КонецЕсли;
					КонецЕсли;
				КонецЕсли;

				
				ОбластьПодвал.Параметры.ДП = ДП;
				ОбластьПодвал.Параметры.МП = МП;
				ОбластьПодвал.Параметры.ГП = ГП;
				//Аверсон 11.10.2019 КВВ СВФР-004911 )
				
				ОбластьПодвал.Параметры.ДатаВыдачи = Формат(Период,"ДФ='dd ММММ yyyy'") +" г.";
				//О.Т. Аверсон 04.01.2017 № 130
				Для Каждого стрОтветств из Организация.ОтветственныеЛица Цикл 
					Если стрОтветств.ОтветственноеЛицо = Перечисления.ОтветственныеЛицаОрганизаций.ГлавныйБухгалтер Тогда 
						ГлавБух = стрОтветств.Сотрудник;
						ДолжностьГлавБух = стрОтветств.Должность;
					КонецЕсли;
					Если стрОтветств.ОтветственноеЛицо = Перечисления.ОтветственныеЛицаОрганизаций.Руководитель Тогда 
						Руководит = стрОтветств.Сотрудник;
						ДолжностьРуководит = стрОтветств.Должность;
