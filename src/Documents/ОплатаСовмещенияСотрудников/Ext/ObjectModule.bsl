	//Аверсон 09.07.2020 КВВ СВФР-006236 (
	Если Обучение Тогда
		Запрос.Текст = СтрЗаменить(Запрос.Текст,"СтрокиДокумента.ЗамещаемыйСотрудник","СтрокиДокумента.Сотрудник");
		КонецЕсли;
	//Аверсон 09.07.2020 КВВ СВФР-006236 )
	Запрос.Выполнить();
	
	// ВТГрафикиСотрудников
