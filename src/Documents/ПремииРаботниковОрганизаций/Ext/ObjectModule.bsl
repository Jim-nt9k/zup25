			Если Результат = 0 Тогда
				ОбластьМакета.Параметры.ПредставлениеВеличиныкр = "(________ руб.)";
			ИначеЕсли Цел(Результат) = Результат Тогда 
				ОбластьМакета.Параметры.ПредставлениеВеличиныкр = "( " + Формат(Результат,"ЧЦ=15; ЧДЦ=0; ЧРД=,; ЧН=' '")+ " руб. )";
			иначе    				
				ОбластьМакета.Параметры.ПредставлениеВеличиныкр = "( " + СтрЗаменить(Формат(Результат,"ЧЦ=15; ЧДЦ=2; ЧРД=,; ЧН=' '"),",",НазваниеЦелыхЕдиниц)+ ?(Прав(СтрЗаменить(Формат(Результат,"ЧЦ=15; ЧДЦ=2; ЧРД=,; ЧН=' '"),",",НазваниеЦелыхЕдиниц),2)="00","",НазваниеДробныхЕдиниц);
			КонецЕсли;
			ТабДокумент.Вывести(ОбластьМакета);
			
			// Подвал документа.
			ТабДокумент.Вывести(ОбластьМакетаПодвал);
			
		КонецЦикла;
		
		// если не было ни одного работника - выводим пустой бланк
		Если ТабДокумент.ВысотаТаблицы = 0 Тогда
			ТабДокумент.Вывести(ОбластьМакетаШапка);
			ТабДокумент.Вывести(ОбластьМакета);
			ТабДокумент.Вывести(ОбластьМакетаПодвал);
		КонецЕсли;
		
		Возврат ТабДокумент;
		
	КонецФункции // ПечатьТ11()
	
